@page "/Operadores/Equipos/Prestar-Equipo"
@model LayoutTemplateWebApp.Pages.PagesOperador.vtn_operador_prestar_equipoModel
@{
}
@if (TempData["ErrorMessage"] != null)
{
    <script>
        alert("@TempData["ErrorMessage"]");
    </script>
}
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const consultarHorarios = document.getElementById("btnPrestarEquipo");
        consultarHorarios.addEventListener("click", function(){
            window.location.assign("/Operadores/Equipos/Prestar-Equipo");
        });
    });
    document.addEventListener("DOMContentLoaded", function () {
        const consultarHorarios = document.getElementById("btnLiberarEquipo");
        consultarHorarios.addEventListener("click", function () {
            window.location.assign("/Operadores/Equipos/Liberar-Equipo");
        });
    });
    document.addEventListener("DOMContentLoaded", function () {
        const consultarHorarios = document.getElementById("btnReportarEquipo");
        consultarHorarios.addEventListener("click", function () {
            window.location.assign("/Operadores/Equipos/Reportar-Equipo");
        });
    });
    document.addEventListener("DOMContentLoaded", function () {
        const consultarHorarios = document.getElementById("btnCerrar");
        consultarHorarios.addEventListener("click", function () {
            window.location.assign("/Equipo");
        });
    });
    document.addEventListener("DOMContentLoaded", function () {
        const consultarHorarios = document.getElementById("btnCancelarOperador");
        consultarHorarios.addEventListener("click", function () {
            window.location.assign("/Equipo");
        });
    });
</script>

<div class="all-container">
    <div class="sidebar-container">
        <ul>
            <li id="btnPrestarEquipo">Controlar Equipos</li>
            <!--<li id="btnLiberarEquipo">Liberar Equipo</li>-->
            <li id="btnReportarEquipo">Reportar Equipo Dañado</li>
        </ul>
    </div>
    <div class="xy-center">
        <div class="main-info-container">

            <h1>Equipos</h1>

            <ul>
                @foreach (var prestado in Model.equiposLibres)
                {
                    <li>
                        <div class="grid-container">
                            <div class="grid-item">@prestado.idEquipment</div>
                            <div class="grid-item">@prestado.name</div>
                            <div class="grid-item">@prestado.description</div>
                            <div class="grid-item" style="display:flex">
                                @if (prestado.availability == false)
                                {
                                    <form asp-page-handler="LiberarEquipo" method="post" style="margin-left:15px">
                                        <input type="hidden" name="idEquipment" value="@prestado.idEquipment" />
                                        <button class="main-button" id="btnActualizarOperador">Liberar</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-page-handler="PrestarEquipo" method="post" style="margin-left:15px">
                                        <input type="hidden" name="idEquipment" value="@prestado.idEquipment" />
                                        <button class="main-button" id="btnActualizarOperador">Prestar</button>
                                    </form>
                                }

                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<style>
    .main-info-container{
        height: auto;
    }
