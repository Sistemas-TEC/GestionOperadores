@page "/AdminOperadores/Equipos/AgregarEquipo"
@model LayoutTemplateWebApp.Pages.PagesAdmOperador.vtn_adm_agregar_equipoModel
@{
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        function handleButtonClick(event) {
            // Check if the key pressed is the "Enter" key (key code 13)
            if (event.keyCode === 13) {
                event.target.click(); // Trigger the click event
            }
        }
        const agregarEquipo = document.getElementById("btnAgregarEquipo");
        agregarEquipo.addEventListener("click", function () {
            window.location.assign("/AdminOperadores/Equipos/AgregarEquipo")
        });
        agregarEquipo.addEventListener("keypress", handleButtonClick);

        const listadoEquipos = document.getElementById("btnEliminarEquipo");
        listadoEquipos.addEventListener("click", function () {
            window.location.assign("/AdminOperadores/Equipos/ListadoEquipo")
        });
        listadoEquipos.addEventListener("keypress", handleButtonClick);

        const reportarEquipo = document.getElementById("btnReportarEquipo");
        reportarEquipo.addEventListener("click", function () {
            window.location.assign("/AdminOperadores/Equipos/ReportarEquipo")
        });
        reportarEquipo.addEventListener("keypress", handleButtonClick);

        const cancelar = document.getElementById("btnCancelar");
        cancelar.addEventListener("click", function () {
            window.location.assign("/admOperadores-Equipo");
        });
        cancelar.addEventListener("keypress", handleButtonClick);
    });
</script>

@if (TempData["ErrorMessage"] != null)
{
    <script>
        alert("@TempData["ErrorMessage"]");
    </script>
}
<div class="all-container">
    <div class="sidebar-container">
        <ul>
            <li id="btnAgregarEquipo" tabindex="10">Agregar Equipo</li>
            <li id="btnEliminarEquipo" tabindex="11">Listado de Equipos</li>
            <li id="btnReportarEquipo" tabindex="12">Reportar Equipo Dañado</li>
        </ul>
    </div>
    <div class="xy-center">
        <div class="main-info-container">

            <h1 tabindex="13">Agregar un nuevo equipo</h1>


            <form asp-page-handler="AgregarEquipo" method="post">

                <div class="center-form input-container-margin">
                    <h3>ID Equipo</h3>
                    <input type="number" class="big-input" name="idEquipo" tabindex="14" aria-label="Inserte el id del equipo">
                </div>

                <div class="center-form input-container-margin">
                    <h3>Nombre</h3>
                    <input type="text" class="big-input" name="nameEquipo" tabindex="15" aria-label="Inserte el nombre del equipo"/>
                </div>

                <div class="center-form input-container-margin">
                    <h3>Descripción</h3>
                    <textarea id="descripcionInput" type="text" name="descripcionInput" rows="4" class="big-input big-input-2" tabindex="16" aria-label="Inserte la descripción del equipo"></textarea>
                </div>

                <div class="center-form input-container-margin">
                    <h3>Disponibilidad</h3>
                    <select name="disponibilidadEquipo" id="disponibilidadEquipo" class="big-input" tabindex="17" aria-label="Seleccione la disponibilidad del equipo">
                        <option value="true">Disponible</option>
                        <option value="false">Ocupada</option>
                    </select>
                </div>

                <div class="center-form input-container-margin">
                    <h3>Condición</h3>
                    <input type="text" class="big-input" name="CondicionEquipo" tabindex="18" aria-label="Describa la condición del equipo">
                </div>

                <div class="parallel-container center-form">
                    <button class="main-button" id="btnAgregar" formmethod="post" type="submit" tabindex="19">
                        Agregar
                    </button>
                    <button class="main-button" id="btnCancelar" type="button" tabindex="20">
                        Cancelar
                    </button>
                </div>
            </form>



        </div>
    </div>
</div>

<style>
    .sidebar-container {
        height: auto;
    }

    .xy-center {
        margin-top: 30px;
        height: auto;
    }

    .main-info-container {
        height: auto;
    }

    .big-input-2 {
        height: 200px !important;
    }
</style>