@page "/AdminOperadores/Instalaciones/HorariosInstalaciones"
@model LayoutTemplateWebApp.Pages.PagesAdmOperador.vtn_adm_consultar_horarios_instalacionesModel
@{
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        function handleButtonClick(event) {
            // Check if the key pressed is the "Enter" key (key code 13)
            if (event.keyCode === 13) {
                event.target.click(); // Trigger the click event
            }
        }
        const agregarOperador = document.getElementById("btnPrestarInstalacion");
        agregarOperador.addEventListener("click", function () {
            window.location.assign("/AdminOperadores/Instalaciones/PrestarInstalacion");
        });
        agregarOperador.addEventListener("keypress", handleButtonClick);

        const eliminarOperador = document.getElementById("btnLiberarInstalacion");
        eliminarOperador.addEventListener("click", function () {
            window.location.assign("/AdminOperadores/Instalaciones/LiberarInstalacion");
        });
        eliminarOperador.addEventListener("keypress", handleButtonClick);

        const actualizarOperador = document.getElementById("btnConsultarHorariosInstalaciones");
        actualizarOperador.addEventListener("click", function () {
            window.location.assign("/AdminOperadores/Instalaciones/HorariosInstalaciones");
        });
        actualizarOperador.addEventListener("keypress", handleButtonClick);


        const actualizarOperador2 = document.getElementById("btnConsultarInstalaciones");
        actualizarOperador2.addEventListener("click", function () {
            window.location.assign("/AdminOperadores/Instalaciones/VisualizarInstalaciones");
        });
        actualizarOperador.addEventListener("keypress", handleButtonClick);
    });
</script>

@if (TempData["ErrorMessage"] != null)
{
    <script>
        alert("@TempData["ErrorMessage"]");
    </script>
}

<style>
    .grid-container {
        display: flex;
        border: 1px solid var(--color-font-sidebar);
    }

    .grid-container h3 {
        width: 33%;
        height: auto;
        padding-top: 4px;
        padding-bottom: 4px;
        text-align:center;
    }

    .parallel-container-2 form {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
    }
</style>

<div class="all-container">
    <div class="sidebar-container">
        <ul>
            <li id="btnPrestarInstalacion" tabindex="10">Prestar Instalación</li>
            <li id="btnLiberarInstalacion" tabindex="11">Liberar Instalación</li>
            <li id="btnConsultarHorariosInstalaciones" tabindex="12">Consultar Horarios Instalaciones</li>
            <li id="btnConsultarInstalaciones" tabindex="13">Consultar Instalaciones</li>
        </ul>
    </div>
    <div class="xy-center">
        <div class="main-info-container">
            <button class="close-button" id="btnCancelar" tabindex="13" aria-label="Volver a la ventana principal de administración de instalaciones">X</button>
            <h1 tabindex="14">Horarios de instalaciones</h1>

            <form asp-page-handler="Buscar" method="post">
                <div class="parallel-container-2">
                    <div class="small-input">
                        <h3>Aula</h3>
                        <select name="instalaciones" id="instalaciones" tabindex="15" aria-label="Seleccione la instalación a consultar">
                            <option value="B3-01">B3-01</option>
                            <option value="B3-03">B3-03(AZUL)</option>
                            <option value="B3-04">B3-04(VERDE)</option>
                            <option value="B3-05">B3-05(ROJO)</option>
                            <option value="B3-06">B3-06</option>
                            <option value="B3-07">B3-07</option>
                            <option value="B3-08">B3-08</option>
                            <option value="B3-10">B3-10(TM)</option>
                            <option value="B6-01">B6-01</option>
                            <option value="B6-02">B6-02</option>
                            <option value="B6-03">B6-03</option>
                            <option value="B6-04">B6-04(LAB)</option>
                            <option value="B6-05">B6-05(LAB)</option>
                        </select>
                    </div>
                    <div class="small-input">
                        <h3>Fecha</h3>
                        <input type="date" name="fecha" tabindex="16" aria-label="Seleccione la fecha a consultar"/>
                    </div>

                    <button class="main-button" style="margin-top: 26px" type="submit" tabindex="17">
                        Buscar
                    </button>
                </div>
            </form>

            <div class="grid-container">
                <h3 tabindex="18">Horario</h3>
                <h3 style="border-left: 2px solid var(--input-border-color)" tabindex="19">Actividad</h3>
            </div>
            @if(Model.results != null && Model.results.Any())
                {
                    @foreach (var item in Model.results)
                    {
                        <div class="grid-container" tabindex="20">
                            <h3>@item.beginningHour - @item.finishingHour</h3>
                            <h3 style="border-left: 2px solid black">@item.activityDescription</h3>
                        </div>
                    }
                }
        </div>
    </div>
</div>

<style>
    .center-main-button {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .main-info-container {
        overflow-y: scroll;
        scrollbar-width: none;
        -ms-overflow-style: none;
    }

        .main-info-container::-webkit-scrollbar {
            display: none;
        }

    .grid-container {
        display: flex;
        border: 1px solid var(--color-font-sidebar);
    }

        .grid-container h3 {
            width: 50%;
        }

    .parallel-container-2 {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
    }
</style>